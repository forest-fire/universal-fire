{
  "name": "@forest-fire/universal-fire",
  "version": "0.1.1",
  "description": "Forest Fire monorepo for Firebase",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/forest-fire/universal-fire.git"
  },
  "scripts": {
    "changed": "yarn lerna changed",
    "release": "yarn lerna publish",
    "bootstrap": "yarn lerna bootstrap",
    "build": "run-s build:types build:shared build:base build:db build:sdk build:closure",
    "build:types": "lerna exec --scope @forest-fire/types yarn build",
    "build:shared": "run-s build:shared:utility build:shared:serialized-query build:shared:base-serializer",
    "build:shared:utility": "lerna exec --scope @forest-fire/utility yarn build",
    "build:shared:base-serializer": "lerna exec --scope @forest-fire/base-serializer yarn build",
    "build:shared:serialized-query": "lerna exec --scope @forest-fire/serialized-query yarn build",
    "build:base": "lerna exec --scope @forest-fire/abstracted-database yarn build",
    "build:db": "run-s build:db:firemock build:db:rtdb build:db:firestore",
    "build:db:rtdb": "lerna exec --scope @forest-fire/real-time-db yarn build",
    "build:db:firestore": "lerna exec --scope @forest-fire/firestore-db yarn build",
    "build:db:firemock": "lerna exec --scope firemock yarn build",
    "build:sdk": "run-s build:sdk:rtdb build:sdk:firestore ",
    "build:sdk:rtdb": "run-s build:sdk:rtdb:client build:sdk:rtdb:admin",
    "build:sdk:rtdb:client": "lerna exec --scope @forest-fire/real-time-client yarn build",
    "build:sdk:rtdb:admin": "lerna exec --scope @forest-fire/real-time-admin yarn build",
    "build:sdk:firestore": "run-p build:sdk:firestore:client build:sdk:firestore:admin",
    "build:sdk:firestore:client": "lerna exec --scope @forest-fire/firestore-client yarn build",
    "build:sdk:firestore:admin": "lerna exec --scope @forest-fire/firestore-admin yarn build",
    "build:closure": "lerna exec --scope universal-fire yarn build",
    "build:docs": "yarn docs:build",
    "test": "run-s test:shared test:db test:sdk test:closure",
    "test:shared": "run-p test:shared:serialized-query test:shared:base-serializer",
    "test:shared:base-serializer": "lerna exec --scope @forest-fire/base-serializer yarn test",
    "test:shared:serialized-query": "lerna exec --scope @forest-fire/serialized-query yarn test",
    "test:sdk": "run-p test:sdk:firestore test:sdk:rtdb",
    "test:sdk:firestore": "run-p test:sdk:firestore:client",
    "test:sdk:firestore:client": "lerna exec --scope @forest-fire/firestore-client yarn test",
    "test:db": "run-p test:db:firemock test:db:rtdb",
    "test:db:firemock": "run-s test:db:firemock:rtdb",
    "test:db:rtdb": "lerna exec --scope @forest-fire/real-time-db yarn test",
    "test:db:firestore": "lerna exec --scope @forest-fire/firestore-db yarn test",
    "test:db:firemock:rtdb": "lerna exec --scope firemock yarn test",
    "test:sdk:rtdb": "run-p test:sdk:rtdb:client test:sdk:rtdb:admin",
    "test:sdk:rtdb:client": "lerna exec --scope @forest-fire/real-time-client yarn test",
    "test:sdk:rtdb:admin": "lerna exec --scope @forest-fire/real-time-admin yarn test",
    "test:closure": "lerna exec --scope universal-fire yarn test",
    "deploy:firemock": "learna exec --scope universal-fire yarn deploy",
    "watch": "run-s watch:rtdb watch:firestore",
    "watch:rtdb": "run-s 'yarn lerna exec --scope @forest-fire/real-time-db yarn watch' 'yarn lerna exec --scope @forest-fire/real-time-client yarn watch' 'yarn lerna exec --scope @forest-fire/real-time-admin yarn watch'",
    "watch:firestore": "run-s 'yarn lerna exec --scope @forest-fire/firestore-db yarn watch' 'yarn lerna exec --scope @forest-fire/firestore-client yarn watch' 'yarn lerna exec --scope @forest-fire/firestore-admin yarn watch'",
    "docs": "yarn lerna exec --scope @forest-fire/docs yarn docs",
    "docs:build": "yarn lerna exec --scope @forest-fire/docs yarn docs:build"
  },
  "devDependencies": {
    "do-devops": "^0.3.6",
    "lerna": "^3.21.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5"
  },
  "license": "MIT"
}
