{
  "name": "@forest-fire/real-time-client",
  "version": "0.48.20",
  "description": "Helpful abstraction on the Firebase client API",
  "license": "MIT",
  "repository": "https://github.com/forest-fire/universal-fire",
  "author": "Ken Snyder <ken@ken.net>",
  "keywords": [
    "firebase",
    "typescript",
    "nodejs",
    "utility",
    "admin"
  ],
  "module": "dist/esm/index.js",
  "types": "dist/esm/src/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist/**/*",
    "clean:nuclear": "rimraf dist node_modules yarn.lock && yarn cache clean && yarn && yarn upgrade",
    "build": "run-s clean build:all",
    "build:all": "run-p build:esnext build:cjs",
    "build:esnext": "rollup -c",
    "build:cjs": "tsc -P tsconfig.cjs.json",
    "build:db": "cd ../.. && yarn build:db && cd -",
    "build:monorepo": "cd ../.. && yarn build && cd -",
    "bootstrap": "cd ../.. && yarn bootstrap && cd -",
    "build:docs": "cd ../.. && yarn build:docs && cd -",
    "watch": "run-p watch:esnext ",
    "watch:esnext": "tsc -P tsconfig.es.json -w",
    "build:nuclear": "run-s clean:nuclear build",
    "test": "yarn do test",
    "watch:test": "npm run test -- --watch"
  },
  "devDependencies": {
    "@forest-fire/serialized-query": "^0.48.20",
    "@rollup/plugin-typescript": "^4.1.2",
    "@types/chai": "^4.2.11",
    "@types/events": "^3.0.0",
    "@types/faker": "^4.1.12",
    "@types/js-yaml": "^3.12.1",
    "@types/lodash.first": "^3.0.3",
    "@types/lodash.last": "^3.0.3",
    "@types/mocha": "^7.0.2",
    "@types/node": "^10.16.0",
    "@types/rimraf": "^2.0.2",
    "async-shelljs": "^0.1.4",
    "chai": "^4.2.0",
    "do-devops": "^0.3.6",
    "faker": "^4.1.0",
    "js-yaml": "^3.13.1",
    "mocha": "^7.1.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.10.8",
    "rollup-plugin-terser": "^6.0.1",
    "test-console": "^1.1.0",
    "ts-node": "^8.9.1",
    "tslib": "^2.0.0",
    "tslint": "^6.1.2",
    "typescript": "^3.9.3"
  },
  "dependencies": {
    "@firebase/app": "^0.6.2",
    "@firebase/app-types": "^0.6.0",
    "@firebase/auth": "^0.14.3",
    "@firebase/auth-types": "^0.10.0",
    "@firebase/database": "^0.6.1",
    "@firebase/database-types": "^0.5.0",
    "@forest-fire/real-time-db": "^0.48.20",
    "@forest-fire/types": "^0.48.17",
    "@forest-fire/utility": "^0.48.17",
    "common-types": "^1.14.3",
    "events": "^3.1.0",
    "firemock": "^0.48.20",
    "lodash.first": "^3.0.0",
    "lodash.last": "^3.0.0",
    "typed-conversions": "^0.10.2"
  },
  "engines": {
    "node": ">=8.13.0"
  }
}
