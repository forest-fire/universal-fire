{
  "name": "universal-fire",
  "version": "0.48.8",
  "description": "Provides a static initializer to all of the Universal Fire SDK's",
  "main": "dist/cjs",
  "module": "dist/es",
  "types": "dist/es/index.d.ts",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/forest-fire/universal-fire.git"
  },
  "scripts": {
    "clean": "rimraf dist/**/*",
    "build": "run-s clean build:all",
    "build:all": "run-p build:esnext build:cjs",
    "build:esnext": "tsc -P tsconfig.es.json",
    "build:cjs": "tsc -P tsconfig.cjs.json",
    "build:monorepo": "cd ../../ && yarn build && cd -",
    "watch": "run-p watch:esnext watch:cjs",
    "watch:esnext": "tsc -P tsconfig.es.json -w",
    "watch:cjs": "tsc -P tsconfig.es.json -w",
    "test": "yarn do test",
    "test:watch": "mocha --require ts-node/register --extensions ts --watch --watch-files src src/**/*.ts",
    "test:coverage": "nyc --reporter=text mocha -require ts-node/register src/**/*.spec.ts",
    "test:e2e": "mocha --require ts-node/register test/*.e2e.ts"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "chai": "^4.2.0",
    "do-devops": "^0.3.6",
    "mocha": "^7.1.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "rimraf": "^3.0.2",
    "ts-node": "^8.9.1",
    "typescript": "^3.9.2"
  },
  "dependencies": {
    "@forest-fire/base-serializer": "^0.48.8",
    "@forest-fire/firestore-admin": "^0.48.8",
    "@forest-fire/firestore-client": "^0.48.8",
    "@forest-fire/real-time-admin": "^0.48.8",
    "@forest-fire/real-time-client": "^0.48.8",
    "@forest-fire/types": "^0.48.7"
  },
  "license": "MIT"
}
