{
  "name": "@forest-fire/firestore-admin",
  "version": "0.49.5",
  "description": "",
  "module": "dist/es",
  "types": "dist/es/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/forest-fire/universal-fire.git"
  },
  "scripts": {
    "clean": "rimraf dist/**/*",
    "build": "run-s clean build:all",
    "build:all": "run-p build:es build:cjs",
    "build:es": "rollup -c",
    "build:cjs": "echo firestore-admin CJS build turned off",
    "watch": "run-p 'watch:esnext' 'watch:cjs'",
    "watch:esnext": "tsc -P tsconfig.es.json -w",
    "watch:cjs": "tsc -P tsconfig.es.json -w",
    "test": "yarn do test",
    "test:watch": "mocha --require ts-node/register --extensions ts --watch --watch-files src src/**/*-spec.ts",
    "test:coverage": "nyc --reporter=text mocha -require ts-node/register src/**/*-spec.ts",
    "test:e2e": "mocha --require ts-node/register test/*-e2e.ts"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^4.1.2",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "chai": "^4.2.0",
    "do-devops": "^0.3.8",
    "mocha": "^7.2.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.10.9",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.3"
  },
  "dependencies": {
    "@forest-fire/firestore-db": "^0.49.5",
    "@forest-fire/types": "^0.49.0",
    "@forest-fire/utility": "^0.49.0",
    "firebase-admin": "^8.12.1"
  },
  "license": "MIT"
}
