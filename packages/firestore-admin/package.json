{
  "name": "@forest-fire/firestore-admin",
  "version": "0.56.0",
  "description": "Admin SDK for the Firestore database",
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "types": "dist/types/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/forest-fire/universal-fire.git"
  },
  "scripts": {
    "clean": "rimraf dist/**/*",
    "watch": "run-p 'watch:esnext' 'watch:cjs'",
    "watch:esnext": "tsc -P tsconfig.es.json -w",
    "watch:cjs": "tsc -P tsconfig.es.json -w",
    "test": "yarn do test",
    "test:watch": "mocha --require ts-node/register --extensions ts --watch --watch-files src src/**/*-spec.ts",
    "test:coverage": "nyc --reporter=text mocha -require ts-node/register src/**/*-spec.ts",
    "test:e2e": "mocha --require ts-node/register test/*-e2e.ts"
  },
  "peerDependencies": {
    "firebase-admin": ">= 8.13.0"
  },
  "optionalDependencies": {
    "firemock": "^0.56.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "chai": "^4.2.0",
    "do-devops": "^0.3.20",
    "firebase-admin": "^8.13.0",
    "firemock": "^0.55.2",
    "mocha": "^7.2.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "@forest-fire/abstracted-database": "^0.56.0",
    "@forest-fire/firestore-db": "^0.56.0",
    "@forest-fire/types": "^0.56.0",
    "@forest-fire/utility": "^0.56.0"
  },
  "license": "MIT"
}
