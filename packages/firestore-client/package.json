{
  "name": "@forest-fire/firestore-client",
  "version": "0.44.2",
  "description": "",
  "module": "dist/es/index.js",
  "main": "dist/cjs/index.js",
  "typings": "dist/es/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/forest-fire/universal-fire.git"
  },
  "scripts": {
    "clean": "rimraf dist/**/*",
    "build": "run-s clean build:all",
    "build:all": "run-p build:esnext build:cjs",
    "build:esnext": "tsc -P tsconfig.es.json",
    "build:cjs": "tsc -P tsconfig.cjs.json",
    "watch": "run-p 'watch:esnext' 'watch:cjs'",
    "watch:esnext": "tsc -P tsconfig.es.json -w",
    "watch:cjs": "tsc -P tsconfig.es.json -w",
    "test": "mocha --require ts-node/register test/**/*-spec.ts",
    "test:watch": "mocha --require ts-node/register --extensions ts --watch --watch-files src src/**/*-spec.ts",
    "test:coverage": "nyc --reporter=text mocha -require ts-node/register src/**/*-spec.ts",
    "test:e2e": "mocha --require ts-node/register test/*-e2e.ts"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "chai": "^4.2.0",
    "mocha": "^7.1.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "rimraf": "^3.0.2",
    "ts-node": "^8.9.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@firebase/app": "^0.6.0",
    "@firebase/auth": "^0.14.2",
    "@firebase/firestore": "^1.14.0",
    "@forest-fire/firestore-db": "^0.44.2",
    "@forest-fire/types": "^0.44.2",
    "@forest-fire/utility": "^0.44.2"
  },
  "license": "MIT"
}
