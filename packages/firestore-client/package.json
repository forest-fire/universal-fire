{
  "name": "@forest-fire/firestore-client",
  "version": "0.52.7",
  "description": "The univeral-fire SDK to connect to Firebase's Firestore database using the Client SDK",
  "main": "dist/cjs/FirestoreClient.js",
  "module": "dist/es/FirestoreClient.js",
  "types": "dist/es/src/FirestoreClient.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/forest-fire/universal-fire.git"
  },
  "scripts": {
    "clean": "rimraf dist/**/*",
    "build": "run-s clean build:all",
    "build:all": "run-p build:es build:cjs",
    "build:es": "rollup -c",
    "build:cjs": "echo firestore client CJS build turned off",
    "watch": "run-p 'watch:es' 'watch:cjs'",
    "watch:es": "tsc -P tsconfig.es.json -w",
    "watch:cjs": "tsc -P tsconfig.es.json -w",
    "test": "yarn do test",
    "test:watch": "mocha --require ts-node/register --extensions ts --watch --watch-files src src/**/*-spec.ts",
    "test:coverage": "nyc --reporter=text mocha -require ts-node/register src/**/*-spec.ts",
    "test:e2e": "mocha --require ts-node/register test/*-e2e.ts"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^4.1.2",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "chai": "^4.2.0",
    "do-devops": "^0.3.6",
    "mocha": "^7.1.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "rimraf": "^3.0.2",
    "rollup-plugin-typescript2": "^0.27.1",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.3"
  },
  "dependencies": {
    "@firebase/app": "^0.6.0",
    "@firebase/auth": "^0.14.2",
    "@firebase/firestore": "^1.14.0",
    "@forest-fire/firestore-db": "^0.52.7",
    "@forest-fire/types": "^0.52.0",
    "@forest-fire/utility": "^0.52.1"
  },
  "license": "MIT"
}
