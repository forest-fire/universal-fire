{
  "compilerOptions": {
    "declaration": true,
    "module": "umd",
    "moduleResolution": "node",
    "target": "es2017",
    "noImplicitAny": true,
    "outDir": "./dist/umd",
    "preserveConstEnums": true,
    "removeComments": false,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/*-spec.ts",
    "node_modules/firebase-admin/lib/index.d.ts",
    "node_modules/@google-cloud/firestore/types/firestore.d.ts",
    "typings"
  ]
}
