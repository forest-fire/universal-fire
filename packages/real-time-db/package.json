{
  "name": "@forest-fire/real-time-db",
  "version": "0.52.0",
  "description": "Core functional library supporting 'abstracted-admin' and 'abstracted-client'",
  "license": "MIT",
  "repository": "https://github.com/forest-fire/abstracted-firebase",
  "author": "Ken Snyder <ken@ken.net>",
  "keywords": [
    "firebase",
    "typescript",
    "utility"
  ],
  "files": [
    "dist"
  ],
  "module": "dist/es/index.js",
  "main": "dist/cjs/index.js",
  "types": "dist/es/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist/**/*",
    "clean:nuclear": "rimraf dist node_modules && rm yarn.lock && yarn cache clean && yarn && yarn upgrade",
    "lint": "tslint --force --format verbose \"src/**/*.ts\"",
    "build": "run-s clean build:all",
    "build:all": "run-p build:esnext build:cjs",
    "build:esnext": "tsc -P tsconfig.es.json",
    "build:cjs": "tsc -P tsconfig.cjs.json",
    "watch": "run-p 'watch:esnext' 'watch:cjs'",
    "watch:esnext": "tsc -P tsconfig.es.json -w",
    "watch:cjs": "tsc -P tsconfig.es.json -w",
    "build:nuclear": "yarn clean:nuclear && yarn build",
    "test": "mocha --require ts-node/register test/**/*-spec.ts",
    "test:watch": "mocha --require ts-node/register --extensions ts --watch --watch-files test test/**/*-spec.ts",
    "test:coverage": "nyc --reporter=text mocha -require ts-node/register test/**/*-spec.ts",
    "deploy": "ts-node ./scripts/deploy.ts ",
    "watch:test": "npm run test -- --watch"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/js-yaml": "^3.12.1",
    "@types/lodash": "^4.14.144",
    "@types/mocha": "^7.0.2",
    "@types/node": "^8.10.0",
    "@types/rimraf": "^2.0.3",
    "async-shelljs": "^0.1.4",
    "chai": "^4.2.0",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.15",
    "mocha": "^7.1.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "rimraf": "^3.0.2",
    "test-console": "^1.1.0",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.2",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "@forest-fire/abstracted-database": "^0.52.0",
    "@forest-fire/serialized-query": "^0.52.0",
    "@forest-fire/types": "^0.52.0",
    "@forest-fire/utility": "^0.52.0",
    "common-types": "^1.14.2",
    "firemock": "^0.52.0",
    "typed-conversions": "^0.10.4"
  },
  "engines": {
    "node": ">=8.13.0"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "lib"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [],
    "all": true
  }
}
